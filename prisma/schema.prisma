// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  image    String
  email    String
  password String
  function String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Patient {
  id               String @id @default(uuid())
  name             String
  cpf              String @unique
  bithDate         String
  homePhoneNumber1 String
  homePhoneNumber2 String
  image            String
  comments         String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("patient")
}

model Medicament {
  id            String @id @default(uuid())
  name          String
  quantity      String
  repeatHour    Int
  repeatMinutes Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("medicament")
}

model Vaccine {
  id            String @id @default(uuid())
  name          String
  firstDoseDate String
  nextDoseDate  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("vaccine")
}

model Exam {
  id   String @id @default(uuid())
  name String
  date String
  hour String
  lab  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("exam")
}
